<div class="small-header"></div>
<div class="row">
  <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 padded">
    Email:<br>
    jeremiahkellick@icloud.com<br><br>

    Phone:<br>
    (814) 573-7139<br><br>

    <h1 class="bold">Free Quote Form</h1><br>
    <%= show_flashes %>
    <%= form_for(@quote_request, url: contact_path) do |f| %>
      <% if @quote_request.errors.any? %>
        <%= show_errors(@quote_request.errors.full_messages) %>
      <% end %>

      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %><br>

      <%= f.label :email %>
      <%= f.text_field :email, class: "form-control" %><br>

      <%= f.label :contact_form, class: "my-checkbox" do %>
        <%= f.check_box :contact_form %>
        <div>I will a contact/quote form like this one.</div>
      <% end %><br>

      <%= f.label :accounts, class: "my-checkbox" do %>
        <%= f.check_box :accounts %>
        <div>I will need to allow users to register accounts on my website.</div>
      <% end %><br>

      <%= f.label :ecommerce, class: "my-checkbox" do %>
        <%= f.check_box :ecommerce %>
        <div>I will need to sell items from my website.</div>
      <% end %><br>

      <%= f.label :website, "Optional: Enter the link to your current website." %>
      <%= f.text_field :website, class: "form-control" %><br>

      <%= f.label :description, "Provide a description of what you want." %>
      <%= f.text_area :description, class: "form-control" %><br>

      <%= recaptcha_tags %><br>

      <%= f.submit "Send quote request.", class: "btn btn-lg btn-primary form-control" %>
    <% end %>
  </div>
</div>